@page
@model New_ConsumerPortal.Pages.create_accountModel
@{
    ViewData["Title"] = "Create Account";
}
<div class="row g-0 login-background align-items-center">
    <!--Left side image-->
    <div class="col-md-6">
        <div class="account-imageBackground">
            <img src="~/images/consumer-portal/account-page-image.jpg" alt="An image of family hugging and happy togther." class="img-fluid invisible" />
        </div>
    </div>
    <!--right side form-->
    <div class="col-md-6">
        <div class="p-3 row justify-content-center">
            <h1 class="fw-light text-center">Create an Account</h1>
            <p class="text-center">Please confirm the below to create your account</p>
            <div class="col col-lg-8 col-xl-6">
                <div class="mb-3">
                    <input type="text" name="createAccunt-firstName" value="" placeholder="First Name" class="form-control form-control-lg" required />
                </div>
                <div class="mb-3">
                    <input type="text" name="createAccunt-lastName" value="" placeholder="Last Name" class="form-control form-control-lg" required />
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control form-control-lg" name="createAccount-email" id="" placeholder="Enter your email" required>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" name="terms-conditions" value="" class="form-check-input" required />
                    <label class="form-check-label lightGrey-text" for="terms-conditions">*I have read and agree to the <a href="#" class="text-decoration-underline purple-text fw-bold" target="_blank">Terms of Service and Privacy Policy</a></label>
                </div>
                <div class="form-check mb-3">
                    <input type="checkbox" name="terms-conditions" value="" class="form-check-input" />
                    <label class="form-check-label lightGrey-text" for="terms-conditions">Please keep me informed about Smarter Living by ZucoraHome</label>
                </div>
            </div>
            
            <!--substitue of "row" class-->
            <div class="w-100"></div>
            <!--login button-->
            <div class="col col-lg-8 col-xl-6 my-2">
                <button class="btn btn-primary w-100 text-uppercase btn-lg" type="submit" data-bs-toggle="modal" data-bs-target="#sucess-createAccount">Create Account</button>
            </div>
            <!--substitue of "row" class-->
            <div class="w-100"></div>
            <!--create account-->
            <div class="col flex-column my-3">
                <div>
                    <p class="lightGrey-text text-center mb-0">Already have an account?</p>
                </div>
                <div class="text-center">
                    <a href="Login" class="purple-text fw-bold text-decoration-none" target="_self">Login</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!--Success Submit Modal-->
<div class="modal fade" tabindex="-1" id="sucess-createAccount" aria-labelledby="sucess-createAccountLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="sucess-createAccountLabel">Success!</h3>
                <button type="button" class="btn-close justify-content-end" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex justify-content-center flex-column p-4">
                <img src="~/images/consumer-portal/success-icon.svg" class="img-fluid createAccount-successIcon mx-auto" alt="" />
                <p class="fw-bold text-center mt-4">Please check your email</p>
                <p class="text-center">You have successfully created your account. Please check your email for a verification link in order to access your account.</p>
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary w-100 text-uppercase" data-bs-dismiss="modal">Ok</button>
            </div>
        </div>
    </div>
</div>
