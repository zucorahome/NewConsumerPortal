@page
@model New_ConsumerPortal.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row g-0">
    <!--Left side image-->
    <div class="col-md-6">
        <img src="~/images/consumer-portal/login-page.jpg" alt="An image of family hugging and happy togther." class="img-fluid" />
    </div>
    <!--right side form-->
    <div class="col-md-6 login-background">
        <div class="p-5 row justify-content-center align-content-center">
            <h1 class="fw-light text-center">Login</h1>
            <div class="col col-lg-4">
                <div class="mb-3">
                    <input type="text" name="login-email" value="" placeholder="Enter your email" class="form-control"/>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Enter your password">
                </div>
            </div>
        </div>
    </div>
</div>

