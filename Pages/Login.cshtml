@page
@model New_ConsumerPortal.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="row g-0 login-background align-items-center">
    <!--Left side image-->
    <div class="col-md-6">
        <div class="login-imageBackground">
            <img src="~/images/consumer-portal/login-page.jpg" alt="An image of family hugging and happy togther." class="img-fluid invisible" />
        </div>
    </div>
    <!--right side form-->
    <div class="col-md-6">
        <div class="p-3 row justify-content-center">
            <h1 class="fw-light text-center">Login</h1>
            <div class="col col-lg-8 col-xl-6 mt-3">
                <div class="mb-3">
                    <input type="text" name="login-email" value="" placeholder="Enter your email" class="form-control form-control-lg" required/>
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Enter your password" required>
                </div>
            </div>
            <!--substitue of "row" class-->
            <div class="w-100"></div>
            <!--Reset password and remember me-->
            <div class="col col-lg-8 my-3 col-xl-6">
                <div class="d-flex justify-content-between align-content-center">
                    <div>
                        <a href="#" class="purple-text fw-bold text-decoration-none">Reset password</a>
                    </div>
                    <div class="form-check">
                        <input type="checkbox" name="remember-me" value="remember" class="form-check-input" />
                        <label class="form-check-label lightGrey-text" for="remember-me">Remember me</label>
                    </div>
                </div>
            </div>
            <!--substitue of "row" class-->
            <div class="w-100"></div>
            <!--login button-->
            <div class="col col-lg-8 col-xl-6 my-2">
                <button class="btn btn-primary w-100 text-uppercase btn-lg" type="submit">Login</button>
            </div>
            <!--substitue of "row" class-->
            <div class="w-100"></div>
            <!--create account-->
            <div class="col flex-column my-3">
                <div>
                    <p class="lightGrey-text text-center mb-0">Don't have an account?</p>
                </div>
                <div class="text-center">
                    <a href="create-account" class="purple-text fw-bold text-decoration-none" target="_self">Create an account?</a>
                </div>
            </div>
        </div>
    </div>
</div>

