        let initialState = document.querySelector("#AllSmarterLivingPlans");
        initialState.classList.remove('d-none');
        initialState.classList.add('current-plan-visible');

        function showPlan(name) {
            let currentId = '#' + name;
            //remvoing classes from current plan showing up and adding d-none
            let lastPlanShowing = document.querySelector('.current-plan-visible');
            lastPlanShowing.classList.remove('current-plan-visible');
            lastPlanShowing.classList.add('d-none');
            //removing d-none the clicked class and adding current plan visible to it as well
            document.querySelector(currentId).classList.remove('d-none');
            document.querySelector(currentId).classList.add('current-plan-visible');
        }


        function AllLinksClicks(planName) {
            let className = '.' + planName;
            let allClasses = document.querySelectorAll(className);
            for (k = 0; k < allClasses.length; k++) {
                allClasses[k].addEventListener("click", function () {
                    showPlan(planName);
                }, false);
            }
        }

        AllLinksClicks('AllSmarterLivingPlans');
        AllLinksClicks('FurniturePlan');
        AllLinksClicks('AppliancePlan');
        AllLinksClicks('HomeSystemPlan');
        AllLinksClicks('AllSmartOnePlans');
        AllLinksClicks('FurnitureSmartOne');
        AllLinksClicks('ApplianceSmartOne');

   
    })();
